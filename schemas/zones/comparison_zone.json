{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Comparison Zone Content Schema",
  "description": "Content zone for competitive comparisons, feature matrices, and alternative evaluations",
  "type": "object",
  "properties": {
    "zone_id": {
      "type": "string",
      "description": "Unique identifier for the zone"
    },
    "zone_type": {
      "type": "string",
      "const": "comparison_zone",
      "description": "Type of zone - must be comparison_zone"
    },
    "zone_name": {
      "type": "string",
      "description": "Human-readable name for the zone"
    },
    "zone_purpose": {
      "type": "string",
      "description": "Primary purpose and goal of this zone"
    },
    "position": {
      "type": "integer",
      "minimum": 1,
      "description": "Order position of zone on the page"
    },
    "is_above_fold": {
      "type": "boolean",
      "default": false,
      "description": "Whether zone appears above the fold"
    },
    "priority": {
      "type": "string",
      "enum": ["high", "medium"],
      "default": "medium",
      "description": "Content importance priority - comparison zones are typically medium to high priority"
    },
    "content_strategy": {
      "type": "string",
      "enum": ["competitive_advantage", "differentiation"],
      "default": "competitive_advantage",
      "description": "Content strategy for comparison zones"
    },
    "sections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/comparison_section"
      },
      "description": "Content sections within the comparison zone"
    }
  },
  "required": ["zone_id", "zone_type", "zone_name", "position", "sections"],
  "definitions": {
    "comparison_section": {
      "type": "object",
      "properties": {
        "section_id": {
          "type": "string",
          "description": "Unique identifier for the section"
        },
        "section_type": {
          "type": "string",
          "enum": [
            "competitor_comparison_section", "feature_matrix_section", "pricing_comparison_section",
            "alternatives_section", "vs_section", "migration_section", "switching_section"
          ],
          "description": "Type of section - comparison focused types"
        },
        "section_name": {
          "type": "string",
          "description": "Human-readable name for the section"
        },
        "section_purpose": {
          "type": "string",
          "description": "Primary purpose of this section"
        },
        "content_structure": {
          "type": "string",
          "enum": [
            "comparison_table", "side_by_side", "feature_grid", "card_comparison", "matrix_layout"
          ],
          "description": "Organizational structure - comparison-focused layouts"
        },
        "content_flow": {
          "type": "string",
          "enum": ["tabular", "grid", "side_by_side"],
          "default": "tabular",
          "description": "How content flows within the section"
        },
        "blocks": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/comparison_block"
          },
          "description": "Individual content blocks within the section"
        }
      },
      "required": ["section_id", "section_type", "section_name", "blocks"]
    },
    "comparison_block": {
      "type": "object",
      "properties": {
        "block_id": {
          "type": "string",
          "description": "Unique identifier for the block"
        },
        "block_category": {
          "type": "string",
          "enum": [
            "comparison_content", "table_content", "visual_content", "metric_content"
          ],
          "description": "High-level category of the content block"
        },
        "block_type": {
          "type": "string",
          "enum": [
            "comparison_table", "feature_comparison", "pricing_comparison", "competitor_card",
            "vs_banner", "feature_matrix", "advantage_list", "migration_guide",
            "switching_incentive", "alternative_option", "benchmark_chart", "score_comparison"
          ],
          "description": "Specific type of content block suitable for comparison zones"
        },
        "content": {
          "$ref": "#/definitions/block_content_data",
          "description": "The actual content data of the block"
        },
        "functionality": {
          "$ref": "#/definitions/block_functionality",
          "description": "Interactive functionality and behavior"
        },
        "metadata": {
          "$ref": "#/definitions/content_metadata",
          "description": "Additional metadata for the content block"
        }
      },
      "required": ["block_id", "block_category", "block_type", "content"]
    },
    "block_content_data": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the comparison content"
        },
        "description": {
          "type": "string",
          "description": "Description of what's being compared"
        },
        "comparison_table": {
          "type": "object",
          "properties": {
            "headers": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Table column headers (products/services being compared)"
            },
            "categories": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "category_name": { "type": "string" },
                  "features": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "feature_name": { "type": "string" },
                        "values": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "value": { "type": "string" },
                              "type": { 
                                "type": "string",
                                "enum": ["yes", "no", "partial", "text", "number", "checkmark", "cross"]
                              },
                              "highlight": { "type": "boolean" }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "description": "Structured comparison table data"
        },
        "competitors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "logo_url": { "type": "string", "format": "uri" },
              "description": { "type": "string" },
              "strengths": {
                "type": "array",
                "items": { "type": "string" }
              },
              "weaknesses": {
                "type": "array",
                "items": { "type": "string" }
              },
              "pricing": { "type": "string" },
              "website_url": { "type": "string", "format": "uri" }
            }
          },
          "description": "Competitor information"
        },
        "our_advantages": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "advantage": { "type": "string" },
              "description": { "type": "string" },
              "proof_point": { "type": "string" }
            }
          },
          "description": "Our competitive advantages"
        },
        "migration_benefits": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "benefit": { "type": "string" },
              "description": { "type": "string" },
              "impact": { "type": "string" }
            }
          },
          "description": "Benefits of switching to our solution"
        },
        "switching_incentives": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "incentive": { "type": "string" },
              "value": { "type": "string" },
              "conditions": { "type": "string" },
              "expires": { "type": "string", "format": "date" }
            }
          },
          "description": "Incentives for switching from competitors"
        },
        "benchmarks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "metric": { "type": "string" },
              "our_score": { "type": "string" },
              "competitor_scores": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "competitor": { "type": "string" },
                    "score": { "type": "string" }
                  }
                }
              },
              "source": { "type": "string" }
            }
          },
          "description": "Performance benchmarks and scores"
        },
        "media_url": {
          "type": "string",
          "format": "uri",
          "description": "URL for comparison charts, graphs, or images"
        },
        "media_type": {
          "type": "string",
          "enum": ["chart", "graph", "image", "infographic"],
          "description": "Type of comparison media"
        },
        "alt_text": {
          "type": "string",
          "description": "Alternative text for accessibility"
        }
      }
    },
    "block_functionality": {
      "type": "object",
      "properties": {
        "interactive": {
          "type": "boolean",
          "description": "Whether the block is interactive"
        },
        "interaction_type": {
          "type": "string",
          "enum": [
            "sort", "filter", "highlight", "expand", "tab_switch", 
            "calculator", "customizer", "side_by_side_toggle"
          ],
          "description": "Type of interaction supported"
        },
        "sortable": {
          "type": "boolean",
          "description": "Whether comparison data can be sorted"
        },
        "filterable": {
          "type": "boolean",
          "description": "Whether comparison data can be filtered"
        },
        "customizable": {
          "type": "boolean",
          "description": "Whether users can customize the comparison"
        },
        "tracking": {
          "type": "object",
          "properties": {
            "analytics_event": {
              "type": "string",
              "description": "Analytics event name"
            },
            "comparison_engagement": {
              "type": "boolean",
              "description": "Whether this tracks comparison engagement"
            },
            "competitor_interest": {
              "type": "boolean",
              "description": "Whether to track interest in specific competitors"
            }
          }
        }
      }
    },
    "content_metadata": {
      "type": "object",
      "properties": {
        "created_date": {
          "type": "string",
          "format": "date-time",
          "description": "Content creation timestamp"
        },
        "updated_date": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp"
        },
        "version": {
          "type": "string",
          "description": "Content version"
        },
        "status": {
          "type": "string",
          "enum": ["draft", "review", "approved", "published"],
          "description": "Content status"
        },
        "comparison_type": {
          "type": "string",
          "enum": ["feature", "pricing", "performance", "comprehensive"],
          "description": "Type of comparison being made"
        },
        "data_source": {
          "type": "string",
          "description": "Source of comparison data"
        },
        "last_verified": {
          "type": "string",
          "format": "date",
          "description": "When comparison data was last verified"
        },
        "fairness_review": {
          "type": "boolean",
          "description": "Whether comparison has been reviewed for fairness"
        },
        "competitive_positioning": {
          "type": "string",
          "enum": ["leader", "challenger", "alternative", "disruptor"],
          "description": "Our competitive positioning"
        },
        "accessibility": {
          "type": "object",
          "properties": {
            "aria_label": {
              "type": "string",
              "description": "ARIA label for screen readers"
            },
            "keyboard_navigation": {
              "type": "boolean",
              "description": "Supports keyboard navigation"
            },
            "table_headers": {
              "type": "boolean",
              "description": "Proper table headers for screen readers"
            }
          }
        }
      }
    }
  },
  "zone_guidelines": {
    "description": "Content zone for competitive comparisons, feature matrices, and alternative evaluations",
    "typical_content": [
      "Feature comparison tables", "Competitor analysis", "Pricing comparisons",
      "Performance benchmarks", "Migration guides", "Switching incentives",
      "Alternative solutions", "Competitive advantages"
    ],
    "content_strategy": "Highlight competitive advantages while maintaining fairness and accuracy",
    "conversion_impact": "High - helps users make informed decisions in our favor",
    "best_practices": [
      "Be factual and fair in comparisons",
      "Update competitor information regularly",
      "Focus on differentiating features",
      "Include third-party validation when possible",
      "Make comparisons easy to scan and understand",
      "Highlight your unique value propositions"
    ]
  }
}