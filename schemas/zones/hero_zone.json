{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hero Zone Content Schema",
  "description": "Primary content zone that captures attention and communicates core value proposition",
  "type": "object",
  "properties": {
    "zone_id": {
      "type": "string",
      "description": "Unique identifier for the zone"
    },
    "zone_type": {
      "type": "string",
      "const": "hero_zone",
      "description": "Type of zone - must be hero_zone"
    },
    "zone_name": {
      "type": "string",
      "description": "Human-readable name for the zone"
    },
    "zone_purpose": {
      "type": "string",
      "description": "Primary purpose and goal of this zone"
    },
    "position": {
      "type": "integer",
      "minimum": 1,
      "description": "Order position of zone on the page"
    },
    "is_above_fold": {
      "type": "boolean",
      "default": true,
      "description": "Whether zone appears above the fold - typically true for hero zones"
    },
    "priority": {
      "type": "string",
      "enum": ["critical", "high"],
      "default": "critical",
      "description": "Content importance priority - hero zones are typically critical or high"
    },
    "content_strategy": {
      "type": "string",
      "enum": ["attention_grabbing"],
      "default": "attention_grabbing",
      "description": "Content strategy for hero zones"
    },
    "sections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/hero_section"
      },
      "description": "Content sections within the hero zone"
    }
  },
  "required": ["zone_id", "zone_type", "zone_name", "position", "sections"],
  "definitions": {
    "hero_section": {
      "type": "object",
      "properties": {
        "section_id": {
          "type": "string",
          "description": "Unique identifier for the section"
        },
        "section_type": {
          "type": "string",
          "enum": [
            "hero_section", "navigation_section", "call_to_action_section"
          ],
          "description": "Type of section - limited to hero-appropriate types"
        },
        "section_name": {
          "type": "string",
          "description": "Human-readable name for the section"
        },
        "section_purpose": {
          "type": "string",
          "description": "Primary purpose of this section"
        },
        "content_structure": {
          "type": "string",
          "enum": [
            "single_column", "hero_banner", "split_content"
          ],
          "description": "Organizational structure - hero zones typically use these layouts"
        },
        "content_flow": {
          "type": "string",
          "enum": ["linear", "hierarchical"],
          "default": "linear",
          "description": "How content flows within the section"
        },
        "blocks": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/hero_block"
          },
          "description": "Individual content blocks within the section"
        }
      },
      "required": ["section_id", "section_type", "section_name", "blocks"]
    },
    "hero_block": {
      "type": "object",
      "properties": {
        "block_id": {
          "type": "string",
          "description": "Unique identifier for the block"
        },
        "block_category": {
          "type": "string",
          "enum": [
            "text_content", "visual_content", "interactive_content", "navigation_content"
          ],
          "description": "High-level category of the content block"
        },
        "block_type": {
          "type": "string",
          "enum": [
            "headline_primary", "headline_secondary", "body_text", "hero_image",
            "cta_button_primary", "cta_button_secondary", "navigation_menus",
            "video_background", "image_background"
          ],
          "description": "Specific type of content block suitable for hero zones"
        },
        "content": {
          "$ref": "#/definitions/block_content_data",
          "description": "The actual content data of the block"
        },
        "functionality": {
          "$ref": "#/definitions/block_functionality",
          "description": "Interactive functionality and behavior"
        },
        "metadata": {
          "$ref": "#/definitions/content_metadata",
          "description": "Additional metadata for the content block"
        }
      },
      "required": ["block_id", "block_category", "block_type", "content"]
    },
    "block_content_data": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "description": "Plain text content of the block"
        },
        "rich_text": {
          "type": "string",
          "description": "HTML or markdown formatted text content"
        },
        "title": {
          "type": "string",
          "description": "Title or heading text"
        },
        "subtitle": {
          "type": "string",
          "description": "Subtitle or secondary heading"
        },
        "description": {
          "type": "string",
          "description": "Descriptive text or explanation"
        },
        "media_url": {
          "type": "string",
          "format": "uri",
          "description": "URL for images, videos, or other media"
        },
        "media_type": {
          "type": "string",
          "enum": ["image", "video", "svg", "gif", "webp", "lottie"],
          "description": "Type of media content"
        },
        "alt_text": {
          "type": "string",
          "description": "Alternative text for accessibility"
        },
        "link_url": {
          "type": "string",
          "format": "uri",
          "description": "URL for clickable elements"
        },
        "link_target": {
          "type": "string",
          "enum": ["_self", "_blank", "_parent", "_top"],
          "default": "_self",
          "description": "Link target behavior"
        }
      }
    },
    "block_functionality": {
      "type": "object",
      "properties": {
        "interactive": {
          "type": "boolean",
          "description": "Whether the block is interactive"
        },
        "interaction_type": {
          "type": "string",
          "enum": ["click", "hover", "navigation"],
          "description": "Type of interaction supported"
        },
        "action_target": {
          "type": "string",
          "description": "Target of the action (URL, element ID, function, etc.)"
        },
        "tracking": {
          "type": "object",
          "properties": {
            "analytics_event": {
              "type": "string",
              "description": "Analytics event name"
            },
            "conversion_goal": {
              "type": "boolean",
              "description": "Whether this is a conversion goal"
            }
          }
        }
      }
    },
    "content_metadata": {
      "type": "object",
      "properties": {
        "created_date": {
          "type": "string",
          "format": "date-time",
          "description": "Content creation timestamp"
        },
        "version": {
          "type": "string",
          "description": "Content version"
        },
        "status": {
          "type": "string",
          "enum": ["draft", "review", "approved", "published"],
          "description": "Content status"
        },
        "accessibility": {
          "type": "object",
          "properties": {
            "aria_label": {
              "type": "string",
              "description": "ARIA label for screen readers"
            },
            "keyboard_navigation": {
              "type": "boolean",
              "description": "Supports keyboard navigation"
            }
          }
        },
        "seo": {
          "type": "object",
          "properties": {
            "heading_level": {
              "type": "string",
              "enum": ["h1", "h2", "h3"],
              "description": "Semantic heading level"
            },
            "keywords": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Target keywords"
            }
          }
        }
      }
    }
  },
  "zone_guidelines": {
    "description": "Primary content zone that captures attention and communicates core value proposition",
    "typical_content": [
      "Primary headline", "Value proposition", "Hero imagery", "Primary CTA",
      "Navigation elements", "Key benefits summary"
    ],
    "content_strategy": "Maximum impact with minimal cognitive load",
    "conversion_impact": "Critical - primary conversion driver",
    "best_practices": [
      "Keep messaging clear and concise",
      "Use compelling visuals",
      "Include strong call-to-action",
      "Optimize for above-the-fold visibility",
      "Test different value propositions"
    ]
  }
}