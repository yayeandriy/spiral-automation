{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Extended Landing Page Structure Schema",
  "description": "Comprehensive schema for defining modern landing page zones, sections, and blocks based on latest marketing trends and conversion optimization practices",
  "type": "object",
  "properties": {
    "landing_page": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object",
          "properties": {
            "page_title": {
              "type": "string",
              "description": "Main page title"
            },
            "page_type": {
              "type": "string",
              "enum": [
                "saas_b2b", "consumer_hardware", "ai_ml_tools", "creative_tools", 
                "mobile_apps", "development_services", "fintech", "healthcare", 
                "edtech", "crypto_web3", "ecommerce", "marketplace", "consulting",
                "agency", "nonprofit", "media_entertainment", "travel_hospitality",
                "real_estate", "automotive", "fitness_wellness"
              ],
              "description": "Industry category of the landing page"
            },
            "layout_pattern": {
              "type": "string",
              "enum": [
                "single_page_scroll", "multi_section_detailed", "demo_focused", 
                "feature_grid", "story_driven", "video_first", "interactive_showcase",
                "comparison_focused", "testimonial_heavy", "mobile_first", 
                "data_driven", "minimalist", "media_rich", "gamified"
              ],
              "description": "Overall layout approach"
            },
            "target_audience": {
              "type": "string",
              "enum": [
                "b2b", "b2c", "developer", "enterprise", "consumer", "startup",
                "freelancer", "agency", "investor", "student", "researcher",
                "creator", "influencer", "community"
              ],
              "description": "Primary target audience"
            },
            "conversion_strategy": {
              "type": "string",
              "enum": [
                "lead_generation", "direct_sale", "freemium_signup", "demo_request",
                "consultation_booking", "content_download", "newsletter_signup",
                "app_install", "community_join", "waitlist_signup", "trial_start"
              ],
              "description": "Primary conversion goal"
            },
            "design_philosophy": {
              "type": "string",
              "enum": [
                "minimal_clean", "bold_vibrant", "professional_corporate", 
                "modern_tech", "creative_artistic", "data_visualization",
                "premium_luxury", "friendly_approachable", "cutting_edge",
                "trustworthy_secure", "innovative_disruptive"
              ],
              "description": "Overall design approach and brand personality"
            }
          },
          "required": ["page_title", "page_type"]
        },
        "zones": {
          "type": "array",
          "minItems": 1,
          "maxItems": 12,
          "items": {
            "$ref": "#/definitions/zone"
          },
          "description": "Major parts of the landing page (up to 12 zones for comprehensive coverage)"
        }
      },
      "required": ["metadata", "zones"]
    }
  },
  "definitions": {
    "zone": {
      "type": "object",
      "properties": {
        "zone_id": {
          "type": "string",
          "description": "Unique identifier for the zone"
        },
        "zone_type": {
          "type": "string",
          "enum": [
            "hero_zone", "features_benefits_zone", "social_proof_zone", 
            "product_showcase_zone", "conversion_zone", "education_zone",
            "comparison_zone", "integration_zone", "community_zone",
            "security_trust_zone", "pricing_value_zone", "resource_zone"
          ],
          "description": "Type of zone based on primary purpose"
        },
        "zone_name": {
          "type": "string",
          "description": "Human-readable name for the zone"
        },
        "zone_purpose": {
          "type": "string",
          "description": "Primary purpose and goal of this zone"
        },
        "position": {
          "type": "integer",
          "minimum": 1,
          "description": "Order position of zone on the page"
        },
        "is_above_fold": {
          "type": "boolean",
          "description": "Whether zone appears above the fold"
        },
        "viewport_priority": {
          "type": "string",
          "enum": ["critical", "important", "secondary", "optional"],
          "description": "Loading and rendering priority"
        },
        "responsive_behavior": {
          "type": "string",
          "enum": ["adaptive", "responsive", "mobile_first", "desktop_optimized"],
          "description": "How zone adapts to different screen sizes"
        },
        "sections": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/section"
          },
          "description": "Building blocks within the zone"
        }
      },
      "required": ["zone_id", "zone_type", "zone_name", "position", "sections"]
    },
    "section": {
      "type": "object",
      "properties": {
        "section_id": {
          "type": "string",
          "description": "Unique identifier for the section"
        },
        "section_type": {
          "type": "string",
          "enum": [
            "hero_section", "navigation_section", "features_overview_section",
            "testimonials_section", "pricing_section", "demo_section",
            "integration_section", "faq_section", "footer_section",
            "call_to_action_section", "benefits_section", "capabilities_section",
            "use_cases_section", "customer_logos_section", "case_studies_section",
            "reviews_section", "product_gallery_section", "specifications_section",
            "comparison_section", "signup_section", "contact_section",
            "team_section", "about_section", "mission_section", "values_section",
            "roadmap_section", "blog_section", "resources_section", "documentation_section",
            "api_section", "security_section", "compliance_section", "trust_section",
            "awards_section", "press_section", "investor_section", "career_section",
            "community_section", "partner_section", "affiliate_section",
            "onboarding_section", "tutorial_section", "webinar_section",
            "calculator_section", "quiz_section", "assessment_section",
            "roi_section", "analytics_section", "metrics_section",
            "comparison_table_section", "feature_matrix_section",
            "interactive_demo_section", "video_testimonials_section",
            "live_chat_section", "support_section", "knowledge_base_section",
            "changelog_section", "status_section", "uptime_section"
          ],
          "description": "Type of section based on content and purpose"
        },
        "section_name": {
          "type": "string",
          "description": "Human-readable name for the section"
        },
        "section_purpose": {
          "type": "string",
          "description": "Primary purpose of this section"
        },
        "layout": {
          "type": "string",
          "enum": [
            "single_column", "two_column", "three_column", "four_column",
            "grid", "carousel", "accordion", "tabs", "hero_banner", 
            "split_screen", "masonry", "timeline", "kanban", "card_deck",
            "sticky_sidebar", "parallax", "full_width", "centered_content",
            "asymmetric", "magazine", "dashboard", "mosaic"
          ],
          "description": "Layout structure of the section"
        },
        "animation_style": {
          "type": "string",
          "enum": [
            "none", "fade_in", "slide_up", "slide_left", "slide_right",
            "zoom_in", "parallax", "stagger", "typewriter", "counter",
            "progress_bar", "morphing", "particle_effect", "wave_animation"
          ],
          "description": "Animation effects for the section"
        },
        "blocks": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/block"
          },
          "description": "Individual content blocks within the section"
        }
      },
      "required": ["section_id", "section_type", "section_name", "blocks"]
    },
    "block": {
      "type": "object",
      "properties": {
        "block_id": {
          "type": "string",
          "description": "Unique identifier for the block"
        },
        "block_category": {
          "type": "string",
          "enum": [
            "text_blocks", "visual_blocks", "interactive_blocks", 
            "social_proof_blocks", "data_blocks", "media_blocks",
            "form_blocks", "navigation_blocks", "widget_blocks"
          ],
          "description": "High-level category of the block"
        },
        "block_type": {
          "type": "string",
          "enum": [
            "headline_primary", "headline_secondary", "headline_tertiary",
            "body_text", "caption_text", "quote_text", "code_snippet",
            "list_items", "numbered_list", "bullet_points", "feature_list",
            "hero_image", "feature_icons", "product_screenshots", "infographics",
            "demo_videos", "explainer_videos", "testimonial_videos", "webinar_recordings",
            "customer_photos", "team_photos", "office_photos", "event_photos",
            "cta_button_primary", "cta_button_secondary", "cta_button_ghost",
            "forms", "contact_forms", "signup_forms", "survey_forms",
            "navigation_menus", "breadcrumbs", "pagination", "search_bar",
            "testimonial_quotes", "company_logos", "certification_badges",
            "statistics", "counters", "progress_bars", "metrics_dashboard",
            "ratings_reviews", "star_ratings", "review_cards", "review_aggregator",
            "pricing_table", "pricing_cards", "pricing_calculator",
            "feature_comparison", "comparison_matrix", "vs_competitor",
            "contact_information", "office_locations", "contact_cards",
            "social_media_links", "social_proof_widgets", "social_feed",
            "legal_links", "privacy_policy", "terms_of_service", "cookie_notice",
            "timeline", "roadmap", "milestone_tracker", "process_steps",
            "accordion", "tabs", "toggle_content", "expandable_cards",
            "carousel", "image_slider", "content_slider", "testimonial_carousel",
            "interactive_map", "location_pins", "store_locator",
            "calculator", "roi_calculator", "pricing_calculator", "savings_calculator",
            "quiz", "assessment", "questionnaire", "poll",
            "live_chat", "chatbot", "help_widget", "support_ticket",
            "newsletter_signup", "email_capture", "lead_magnet", "content_gate",
            "countdown_timer", "urgency_widget", "scarcity_indicator",
            "notification_bar", "announcement_banner", "alert_message",
            "loading_spinner", "skeleton_loader", "placeholder_content",
            "error_message", "success_message", "validation_message",
            "tooltip", "popover", "modal", "overlay",
            "share_buttons", "bookmark_widget", "print_button",
            "audio_player", "podcast_player", "music_widget",
            "calendar", "event_scheduler", "booking_widget", "appointment_form",
            "file_upload", "document_viewer", "pdf_embed",
            "code_editor", "syntax_highlighter", "api_explorer",
            "chart", "graph", "data_visualization", "analytics_widget",
            "weather_widget", "stock_ticker", "news_feed", "rss_feed",
            "payment_form", "checkout_widget", "shopping_cart", "wishlist",
            "product_grid", "category_filter", "product_search",
            "video_background", "image_background", "gradient_background",
            "particle_animation", "lottie_animation", "gif_animation"
          ],
          "description": "Specific type of content block"
        },
        "content": {
          "$ref": "#/definitions/block_content",
          "description": "The actual content of the block"
        },
        "styling": {
          "$ref": "#/definitions/block_styling",
          "description": "Visual styling properties"
        },
        "functionality": {
          "$ref": "#/definitions/block_functionality",
          "description": "Interactive functionality if applicable"
        },
        "accessibility": {
          "$ref": "#/definitions/accessibility_properties",
          "description": "Accessibility and inclusive design properties"
        },
        "seo_properties": {
          "$ref": "#/definitions/seo_properties",
          "description": "Search engine optimization properties"
        }
      },
      "required": ["block_id", "block_category", "block_type", "content"]
    },
    "block_content": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "description": "Text content of the block"
        },
        "rich_text": {
          "type": "string",
          "description": "HTML or markdown formatted text content"
        },
        "alt_text": {
          "type": "string",
          "description": "Alternative text for accessibility"
        },
        "media_url": {
          "type": "string",
          "format": "uri",
          "description": "URL for images, videos, or other media"
        },
        "media_type": {
          "type": "string",
          "enum": ["image", "video", "audio", "svg", "gif", "webp", "lottie", "pdf", "document"],
          "description": "Type of media content"
        },
        "media_sources": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": { "type": "string", "format": "uri" },
              "format": { "type": "string" },
              "quality": { "type": "string" },
              "device": { "type": "string" }
            }
          },
          "description": "Multiple media sources for responsive design"
        },
        "link_url": {
          "type": "string",
          "format": "uri",
          "description": "URL for clickable elements"
        },
        "link_target": {
          "type": "string",
          "enum": ["_self", "_blank", "_parent", "_top"],
          "description": "Link target behavior"
        },
        "items": {
          "type": "array",
          "items": {
            "oneOf": [
              { "type": "string" },
              {
                "type": "object",
                "properties": {
                  "text": { "type": "string" },
                  "icon": { "type": "string" },
                  "description": { "type": "string" },
                  "link": { "type": "string", "format": "uri" },
                  "badge": { "type": "string" },
                  "priority": { "type": "string", "enum": ["high", "medium", "low"] }
                }
              }
            ]
          },
          "description": "List items for list blocks with enhanced metadata"
        },
        "form_fields": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/form_field"
          },
          "description": "Form fields for form blocks"
        },
        "data_source": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["static", "api", "cms", "database", "real_time"]
            },
            "endpoint": { "type": "string", "format": "uri" },
            "refresh_interval": { "type": "integer" },
            "cache_duration": { "type": "integer" }
          },
          "description": "Dynamic content data source configuration"
        },
        "localization": {
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}(-[A-Z]{2})?$": {
              "type": "object",
              "properties": {
                "text": { "type": "string" },
                "media_url": { "type": "string", "format": "uri" },
                "alt_text": { "type": "string" }
              }
            }
          },
          "description": "Localized content for different languages/regions"
        }
      }
    },
    "block_styling": {
      "type": "object",
      "properties": {
        "size": {
          "type": "string",
          "enum": ["xs", "small", "medium", "large", "xl", "2xl", "3xl", "fluid"],
          "description": "Relative size of the block"
        },
        "color_scheme": {
          "type": "string",
          "enum": [
            "primary", "secondary", "accent", "neutral", "success", "warning", 
            "error", "info", "light", "dark", "gradient_primary", "gradient_secondary",
            "brand_colors", "custom"
          ],
          "description": "Color scheme applied to the block"
        },
        "font_weight": {
          "type": "string",
          "enum": ["thin", "light", "normal", "medium", "semibold", "bold", "extrabold", "black"],
          "description": "Font weight for text blocks"
        },
        "font_family": {
          "type": "string",
          "enum": ["primary", "secondary", "heading", "body", "monospace", "custom"],
          "description": "Font family selection"
        },
        "alignment": {
          "type": "string",
          "enum": ["left", "center", "right", "justify", "start", "end"],
          "description": "Text or content alignment"
        },
        "emphasis": {
          "type": "boolean",
          "description": "Whether the block should be emphasized"
        },
        "background": {
          "type": "string",
          "enum": [
            "transparent", "solid", "gradient", "image", "video", "pattern",
            "blur", "glass_morphism", "neumorphism"
          ],
          "description": "Background type"
        },
        "border": {
          "type": "object",
          "properties": {
            "style": {
              "type": "string",
              "enum": ["none", "solid", "dashed", "dotted", "gradient"]
            },
            "width": {
              "type": "string",
              "enum": ["thin", "medium", "thick", "custom"]
            },
            "radius": {
              "type": "string",
              "enum": ["none", "small", "medium", "large", "full", "custom"]
            }
          }
        },
        "shadow": {
          "type": "string",
          "enum": ["none", "small", "medium", "large", "xl", "inner", "custom"],
          "description": "Drop shadow effect"
        },
        "spacing": {
          "type": "object",
          "properties": {
            "margin": {
              "type": "string",
              "enum": ["none", "xs", "sm", "md", "lg", "xl", "auto", "custom"]
            },
            "padding": {
              "type": "string",
              "enum": ["none", "xs", "sm", "md", "lg", "xl", "custom"]
            }
          }
        },
        "responsive_behavior": {
          "type": "object",
          "properties": {
            "mobile": {
              "type": "object",
              "properties": {
                "hidden": { "type": "boolean" },
                "size": { "type": "string" },
                "alignment": { "type": "string" }
              }
            },
            "tablet": {
              "type": "object",
              "properties": {
                "hidden": { "type": "boolean" },
                "size": { "type": "string" },
                "alignment": { "type": "string" }
              }
            },
            "desktop": {
              "type": "object",
              "properties": {
                "hidden": { "type": "boolean" },
                "size": { "type": "string" },
                "alignment": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "block_functionality": {
      "type": "object",
      "properties": {
        "interactive": {
          "type": "boolean",
          "description": "Whether the block is interactive"
        },
        "action_type": {
          "type": "string",
          "enum": [
            "click", "hover", "scroll", "form_submit", "navigation", "download",
            "share", "bookmark", "print", "copy", "expand", "collapse", "toggle",
            "drag", "drop", "swipe", "pinch", "zoom", "rotate", "voice_command",
            "gesture", "shake", "tilt", "proximity", "ambient_light"
          ],
          "description": "Type of interaction"
        },
        "action_target": {
          "type": "string",
          "description": "Target of the action (URL, element ID, etc.)"
        },
        "micro_interactions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "trigger": { "type": "string" },
              "animation": { "type": "string" },
              "duration": { "type": "number" },
              "delay": { "type": "number" },
              "easing": { "type": "string" }
            }
          },
          "description": "Small interactive animations and feedback"
        },
        "conditional_display": {
          "type": "object",
          "properties": {
            "conditions": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "parameter": { "type": "string" },
                  "operator": { "type": "string", "enum": ["equals", "not_equals", "greater_than", "less_than", "contains"] },
                  "value": { "type": "string" }
                }
              }
            },
            "logic": { "type": "string", "enum": ["and", "or"] }
          },
          "description": "Conditions for showing/hiding the block"
        },
        "personalization": {
          "type": "object",
          "properties": {
            "user_segments": {
              "type": "array",
              "items": { "type": "string" }
            },
            "geographic_targeting": {
              "type": "array",
              "items": { "type": "string" }
            },
            "behavioral_triggers": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "description": "Personalization and targeting rules"
        },
        "tracking": {
          "type": "object",
          "properties": {
            "analytics_event": {
              "type": "string",
              "description": "Analytics event name"
            },
            "conversion_goal": {
              "type": "boolean",
              "description": "Whether this is a conversion goal"
            },
            "heat_mapping": {
              "type": "boolean",
              "description": "Track for heat mapping analysis"
            },
            "ab_test_variant": {
              "type": "string",
              "description": "A/B test variant identifier"
            },
            "custom_attributes": {
              "type": "object",
              "additionalProperties": { "type": "string" },
              "description": "Custom tracking attributes"
            }
          }
        }
      }
    },
    "accessibility_properties": {
      "type": "object",
      "properties": {
        "aria_label": {
          "type": "string",
          "description": "ARIA label for screen readers"
        },
        "aria_describedby": {
          "type": "string",
          "description": "ARIA described by reference"
        },
        "role": {
          "type": "string",
          "description": "ARIA role"
        },
        "tabindex": {
          "type": "integer",
          "description": "Tab order index"
        },
        "keyboard_navigation": {
          "type": "boolean",
          "description": "Supports keyboard navigation"
        },
        "high_contrast_support": {
          "type": "boolean",
          "description": "Optimized for high contrast mode"
        },
        "screen_reader_text": {
          "type": "string",
          "description": "Additional text for screen readers"
        },
        "color_blind_friendly": {
          "type": "boolean",
          "description": "Uses color-blind friendly design"
        }
      }
    },
    "seo_properties": {
      "type": "object",
      "properties": {
        "heading_level": {
          "type": "string",
          "enum": ["h1", "h2", "h3", "h4", "h5", "h6"],
          "description": "Semantic heading level"
        },
        "structured_data": {
          "type": "object",
          "description": "Schema.org structured data"
        },
        "meta_description": {
          "type": "string",
          "description": "Meta description for the content"
        },
        "keywords": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Target keywords"
        },
        "canonical_url": {
          "type": "string",
          "format": "uri",
          "description": "Canonical URL reference"
        }
      }
    },
    "form_field": {
      "type": "object",
      "properties": {
        "field_id": {
          "type": "string",
          "description": "Unique identifier for the form field"
        },
        "field_type": {
          "type": "string",
          "enum": [
            "text", "email", "password", "number", "tel", "url", "search",
            "textarea", "select", "checkbox", "radio", "file", "date",
            "datetime-local", "time", "color", "range", "hidden",
            "multi_select", "autocomplete", "tags", "rich_text",
            "signature", "rating", "slider", "toggle", "image_upload"
          ],
          "description": "HTML input type or custom field type"
        },
        "label": {
          "type": "string",
          "description": "Field label"
        },
        "placeholder": {
          "type": "string",
          "description": "Placeholder text"
        },
        "help_text": {
          "type": "string",
          "description": "Help text or description"
        },
        "required": {
          "type": "boolean",
          "description": "Whether the field is required"
        },
        "validation": {
          "type": "object",
          "properties": {
            "pattern": {
              "type": "string",
              "description": "Regex pattern for validation"
            },
            "min_length": {
              "type": "integer",
              "description": "Minimum length"
            },
            "max_length": {
              "type": "integer",
              "description": "Maximum length"
            },
            "min_value": {
              "type": "number",
              "description": "Minimum numeric value"
            },
            "max_value": {
              "type": "number",
              "description": "Maximum numeric value"
            },
            "custom_validation": {
              "type": "string",
              "description": "Custom validation function"
            }
          }
        },
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "value": { "type": "string" },
              "label": { "type": "string" },
              "disabled": { "type": "boolean" },
