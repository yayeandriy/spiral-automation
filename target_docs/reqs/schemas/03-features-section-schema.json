{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://spiral-automation.com/schemas/features-section.json",
  "title": "Features Section Schema",
  "description": "Schema for Features documentation section highlighting product capabilities and functionality",
  "type": "object",
  "required": ["name", "tag", "description", "children"],
  "properties": {
    "name": {
      "type": "string",
      "const": "Features",
      "description": "Must be 'Features'"
    },
    "tag": {
      "type": "string",
      "const": "features",
      "description": "Must be 'features'"
    },
    "description": {
      "type": "string",
      "minLength": 15,
      "maxLength": 500,
      "description": "Overview of product capabilities and key features"
    },
    "children": {
      "type": "array",
      "minItems": 4,
      "maxItems": 15,
      "items": { "$ref": "#/definitions/feature_child" }
    },
    "metadata": { "$ref": "#/definitions/metadata" }
  },
  "definitions": {
    "feature_child": {
      "type": "object",
      "required": ["name", "description"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[A-Z][a-zA-Z0-9 \\-&]+$",
          "minLength": 5,
          "maxLength": 80,
          "description": "Feature name starting with capital letter"
        },
        "description": {
          "type": "string",
          "minLength": 30,
          "maxLength": 2000,
          "description": "Detailed explanation of feature capabilities and benefits"
        },
        "bullet_points": {
          "type": "array",
          "minItems": 3,
          "maxItems": 10,
          "items": {
            "type": "string",
            "minLength": 15,
            "maxLength": 180,
            "description": "Specific feature benefits, capabilities, or use cases"
          }
        },
        "feature_type": {
          "type": "string",
          "enum": [
            "core_functionality",
            "automation",
            "integration",
            "reporting",
            "security",
            "performance",
            "user_interface",
            "analytics"
          ],
          "description": "Category of feature functionality"
        },
        "availability": {
          "type": "string",
          "enum": ["all_plans", "premium_only", "enterprise_only", "beta", "coming_soon"],
          "description": "Feature availability across product tiers"
        },
        "links": {
          "type": "array",
          "items": { "$ref": "#/definitions/link" }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "automation", "measurement", "inspection", "reporting", 
              "integration", "api", "dashboard", "analytics", 
              "quality-control", "precision", "real-time"
            ]
          }
        }
      }
    },
    "link": {
      "type": "object",
      "required": ["title", "url"],
      "properties": {
        "title": { "type": "string", "minLength": 5, "maxLength": 100 },
        "url": { "type": "string", "format": "uri" },
        "description": { "type": "string", "maxLength": 200 }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "last_updated": { "type": "string", "format": "date" },
        "author": { "type": "string", "maxLength": 100 },
        "priority": { "type": "string", "enum": ["high", "medium", "low"] },
        "target_audience": {
          "type": "array",
          "items": { "type": "string", "enum": ["developers", "administrators", "end-users", "managers", "technical-writers"] }
        }
      }
    }
  },
  "additionalProperties": false
}