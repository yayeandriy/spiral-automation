{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://spiral-automation.com/schemas/advanced-features-section.json",
  "title": "Use Cases Section Schema",
  "description": "Schema for Use Cases section covering real-world scenarios and business applications",
  "type": "object",
  "required": ["name", "tag", "description", "children"],
  "properties": {
    "name": {
      "type": "string",
      "const": "Use Cases",
      "description": "Must be 'Use Cases'"
    },
    "tag": {
      "type": "string",
      "const": "use-cases",
      "description": "Must be 'use-cases'"
    },
    "description": {
      "type": "string",
      "minLength": 25,
      "maxLength": 500,
      "description": "Overview of sophisticated features for expert users"
    },
    "children": {
      "type": "array",
      "minItems": 3,
      "maxItems": 12,
      "items": { "$ref": "#/definitions/advanced_feature_child" }
    },
    "metadata": { "$ref": "#/definitions/metadata" }
  },
  "definitions": {
    "advanced_feature_child": {
      "type": "object",
      "required": ["name", "description"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[A-Z][a-zA-Z0-9 \\-&:]+$",
          "minLength": 8,
          "maxLength": 100,
          "examples": [
            "Custom Automation Workflows",
            "Advanced Analytics & Reporting",
            "Enterprise Integrations",
            "Machine Learning Capabilities"
          ]
        },
        "description": {
          "type": "string",
          "minLength": 40,
          "maxLength": 2000,
          "description": "Detailed explanation of advanced functionality and use cases"
        },
        "bullet_points": {
          "type": "array",
          "minItems": 3,
          "maxItems": 12,
          "items": {
            "type": "string",
            "minLength": 20,
            "maxLength": 250,
            "description": "Advanced capabilities, technical specifications, or expert use cases"
          }
        },
        "complexity_level": {
          "type": "string",
          "const": "advanced",
          "description": "Must be 'advanced' for this section"
        },
        "prerequisites": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 10,
            "maxLength": 150
          },
          "description": "Required knowledge, setup, or permissions for this advanced feature"
        },
        "technical_requirements": {
          "type": "object",
          "properties": {
            "minimum_version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
            "license_level": { "type": "string", "enum": ["professional", "enterprise", "custom"] },
            "system_resources": { "type": "string", "maxLength": 200 },
            "dependencies": {
              "type": "array",
              "items": { "type": "string", "maxLength": 100 }
            }
          }
        },
        "code_examples": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/definitions/advanced_code_example" }
        },
        "configuration_options": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["parameter", "description"],
            "properties": {
              "parameter": { "type": "string", "minLength": 3, "maxLength": 50 },
              "description": { "type": "string", "minLength": 15, "maxLength": 300 },
              "type": { "type": "string", "enum": ["string", "number", "boolean", "array", "object"] },
              "default_value": { "type": "string", "maxLength": 100 },
              "required": { "type": "boolean" }
            }
          }
        },
        "links": {
          "type": "array",
          "items": { "$ref": "#/definitions/link" }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "advanced", "expert", "enterprise", "automation", "ml",
              "analytics", "integration", "custom", "configuration",
              "scripting", "api-advanced", "workflows"
            ]
          }
        }
      }
    },
    "advanced_code_example": {
      "type": "object",
      "required": ["title", "code", "language"],
      "properties": {
        "title": { "type": "string", "minLength": 10, "maxLength": 120 },
        "code": { "type": "string", "minLength": 50 },
        "language": {
          "type": "string",
          "enum": ["javascript", "python", "typescript", "sql", "json", "yaml", "bash", "powershell"]
        },
        "description": { "type": "string", "minLength": 20, "maxLength": 500 },
        "complexity": { "type": "string", "enum": ["intermediate", "advanced", "expert"] }
      }
    },
    "link": {
      "type": "object",
      "required": ["title", "url"],
      "properties": {
        "title": { "type": "string", "minLength": 5, "maxLength": 100 },
        "url": { "type": "string", "format": "uri" },
        "description": { "type": "string", "maxLength": 200 }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "last_updated": { "type": "string", "format": "date" },
        "author": { "type": "string", "maxLength": 100 },
        "priority": { "type": "string", "enum": ["high", "medium", "low"] },
        "target_audience": {
          "type": "array",
          "items": { "type": "string", "enum": ["developers", "administrators", "technical-writers"] }
        }
      }
    }
  },
  "additionalProperties": false
}